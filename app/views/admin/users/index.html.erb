<h2> 帳號列表 </h2>
<table class="table table-boardered">
    <thead>
        <tr>
            <th>#</th>
            <th>Email</th>
            <th>權限</th>
            <th>功能</th>
        </tr>
    </thead>
    
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td>
                <%= user.id %>
            </td>
            <td>
                <%= user.email %>
            </td>
            <td>
                <% if user.admin? %>
                    管理員
                <% else %>
                    一般會員
                <% end %>
            </td>
            <td>
                <% if user.admin? %>
                    <%= link_to("轉為一般使用者", to_normal_admin_user_path(user), method: :post, class: "btn btn-info") %>
                <% else %>
                    <%= link_to("轉為管理員", to_admin_admin_user_path(user), method: :post, class: "btn btn-primary") %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>