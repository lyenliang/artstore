<h2>新增產品</h2>
<%= simple_form_for [:admin, @product] do |f| %>

  <div class="form-group">
    <%= f.input :title, label: "標題" %>
  </div>

  <div class="form-group">
    <%= f.input :description, label: "描述", as: :text %>
  </div>

  <div class="form-group">
    <%= f.input :price, label: "價格" %>
  </div>

  <div class="form-group">
    <%= f.input :quantity, label: "數量" %>
  </div>

  <%= f.submit "Submit", disable_with: "Submitting..." %>
  
<% end %>
