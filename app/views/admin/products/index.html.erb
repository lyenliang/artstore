<% @products.each do |product| %>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Image</th>
        <th>Name</th>
        <th>Price</th>
        <th>Options</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= product.id %></td>
        <td>NA</td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= link_to("Edit", edit_admin_product_path(product)) %></td>
      </tr>
    </tbody>
  </table>
<% end %>
